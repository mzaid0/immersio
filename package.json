{
    "name": "immersio",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run frontend\" \"npm run backend\" \"npm run shared\" \"npm run prisma:studio\" --names \"frontend,backend,shared,studio\" --prefix-colors \"blue,green,yellow,magenta\"",
        "frontend": "cd apps/frontend && npm run dev",
        "backend": "cd apps/backend && npm run dev",
        "shared": "cd packages/shared && npm run dev",
        "prisma:studio": "cd apps/backend && npx prisma studio",
        "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
        "build:shared": "cd packages/shared && npm run build",
        "build:backend": "cd apps/backend && npm run build",
        "build:frontend": "cd apps/frontend && npm run build",
        "clean": "rm -rf apps/*/dist apps/*/node_modules packages/*/dist packages/*/node_modules node_modules",
        "install:all": "npm install",
        "postinstall": "cd packages/shared && npm run build",
        "start:frontend": "cd apps/frontend && npm run start",
        "start:backend": "cd apps/backend && npm run start",
        "start:all": "concurrently \"npm run start:frontend\" \"npm run start:backend\" --names \"frontend,backend\" --prefix-colors \"blue,green\"",
        "prod": "npm run build && npm run start:all"
    },
    "devDependencies": {
        "concurrently": "^9.0.1",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=7.0.0"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.1",
        "axios": "^1.11.0",
        "zod": "^4.0.14"
    }
}