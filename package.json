{
    "name": "my-project",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm:dev:*\" --names \"frontend,backend,shared\" --prefix-colors \"blue,green,yellow\"",
        "dev:frontend": "cd apps/frontend && npm run dev",
        "dev:backend": "cd apps/backend && npm run dev",
        "dev:shared": "cd packages/shared && npm run dev",
        "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
        "build:shared": "cd packages/shared && npm run build",
        "build:backend": "cd apps/backend && npm run build",
        "build:frontend": "cd apps/frontend && npm run build",
        "clean": "rm -rf apps/*/dist apps/*/node_modules packages/*/dist packages/*/node_modules node_modules",
        "install:all": "npm install",
        "postinstall": "cd packages/shared && npm run build"
    },
    "devDependencies": {
        "concurrently": "^9.0.1",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=7.0.0"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.1",
        "zod": "^4.0.14"
    }
}
